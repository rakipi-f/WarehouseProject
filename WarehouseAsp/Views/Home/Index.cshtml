@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row">
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <img src="~/Images/features.png" alt="Products Image">
                </div>
                <div class="card-content">
                    <span class="card-title">Products</span>
                </div>
                <div class="card-action">
                    <a href="@Url.Action("List", "Products")" class="btn waves-effect waves-light">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <img src="~/Images/distribution.png" alt="Movements Image">
                </div>
                <div class="card-content">
                    <span class="card-title">Movements</span>
                </div>
                <div class="card-action">
                    <a href="@Url.Action("List", "Movements")" class="btn waves-effect waves-light">Go to Movements</a>
                </div>
            </div>
        </div>
        <div class="col s12 m4">
            <div class="card">
                <div class="card-image">
                    <img src="~/Images/in-stock.png" alt="Stocks Image">
                </div>
                <div class="card-content">
                    <span class="card-title">Stocks</span>
                </div>
                <div class="card-action">
                    <a href="@Url.Action("List", "Stocks")" class="btn waves-effect waves-light">Go to Stocks</a>
                </div>
            </div>
        </div>
    </section>
</main>

