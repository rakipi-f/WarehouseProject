@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row">
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-image">
                    <img src="~/Images/features.png" alt="Movements Image">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">Products<i class="material-icons right">+</i></span>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Products<i class="material-icons right">X</i></span>
                    <p>A view of all product present in the warehouse with the possibility to see their details.</p>
                </div>
                <div class="card-action">
                    <a href="@Url.Action("List", "Products")" class="btn waves-effect waves-light">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-image">
                    <img src="~/Images/distribution.png" alt="Movements Image">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">Movements<i class="material-icons right">+</i></span>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Movements<i class="material-icons right">X</i></span>
                    <p>See all the movement from the most recent and also you can:</p>
                    <p>Create new movement</p>
                    <p>Modify a movement</p>
                    <p>Delete a movement</p>
                </div>
                <div class="card-action">
                    <a href="@Url.Action("List", "Movements")" class="btn waves-effect waves-light">Go to Movements</a>
                </div>
            </div>
        </div>
        <div class="col s12 m6 l4">
            <div class="card">
                <div class="card-image">
                    <img src="~/Images/in-stock.png" alt="Stocks Image">
                </div>
                <div class="card-content">
                    <span class="card-title activator grey-text text-darken-4">Stocks<i class="material-icons right">+</i></span>
                </div>
                <div class="card-reveal">
                    <span class="card-title grey-text text-darken-4">Stocks<i class="material-icons right">X</i></span>
                    <p>Keep track of how many stock there are of each product.</p>
                </div>
                <div class="card-action">
                    <a href="@Url.Action("List", "Stocks")" class="btn waves-effect waves-light">Go to Stocks</a>
                </div>
            </div>
        </div>
    </section>
</main>
